{
  "name": "turbo-microservices",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "^18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.2.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen:workspace": "turbo gen workspace"
  },
  "devDependencies": {
    "@turbo/gen": "^1.9.7",
    "config": "workspace:*",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "turbo": "^1.9.7"
  }
}
